{
  "name": "@gsong/ccmcp",
  "version": "1.2.1",
  "description": "Claude Code MCP Selector - Intelligently discover, validate, and select MCP server configurations for Claude Code",
  "license": "MIT",
  "author": "George Song",
  "repository": {
    "type": "git",
    "url": "https://github.com/gsong/ccmcp.git"
  },
  "homepage": "https://github.com/gsong/ccmcp",
  "keywords": [
    "claude",
    "mcp",
    "cli",
    "selector",
    "configuration"
  ],
  "bin": {
    "ccmcp": "./dist/index.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "scripts": {
    "dev": "tsx src/index.ts",
    "test": "vitest run",
    "build": "run-s lint type-check _compile",
    "fix": "run-s lint:fix format type-check",
    "release:patch": "node scripts/release.js patch",
    "release:minor": "node scripts/release.js minor",
    "release:major": "node scripts/release.js major",
    "lint": "biome check src scripts",
    "lint:fix": "biome check --write src scripts",
    "format": "run-s _format:biome _format:prettier",
    "type-check": "tsc --noEmit",
    "_compile": "tsup",
    "_format:biome": "biome format --write src scripts",
    "_format:prettier": "prettier --write '**/*.{md,json,yaml,yml}'",
    "_clean": "rm -rf dist",
    "_release:generate-notes": "node scripts/generate-release-notes.js",
    "_release:clean-files": "rm -f .tmp-tag-notes.txt .tmp-release-prompt.txt"
  },
  "packageManager": "pnpm@10.17.0",
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@types/node": "^24.8.1",
    "@types/shell-quote": "^1.7.5",
    "ink-testing-library": "^4.0.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.0"
  },
  "dependencies": {
    "@types/react": "^19.2.2",
    "ink": "^6.3.1",
    "react": "^19.2.0",
    "shell-quote": "^1.8.3",
    "zod": "^4.1.12"
  }
}
