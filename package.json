{
  "name": "@gsong/ccmcp",
  "version": "0.4.0",
  "description": "Claude Code MCP Selector - Intelligently discover, validate, and select MCP server configurations for Claude Code",
  "license": "MIT",
  "author": "George Song",
  "repository": {
    "type": "git",
    "url": "https://github.com/gsong/ccmcp.git"
  },
  "homepage": "https://github.com/gsong/ccmcp",
  "keywords": [
    "claude",
    "mcp",
    "cli",
    "selector",
    "configuration"
  ],
  "bin": {
    "ccmcp": "./dist/index.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "scripts": {
    "dev": "tsx src/index.ts",
    "clean": "rm -rf dist",
    "lint": "biome check src scripts",
    "lint:fix": "biome check --write src scripts",
    "format": "biome format --write src scripts",
    "format:other": "prettier --write '**/*.{md,json,yaml,yml}'",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "fix": "run-s lint:fix format format:other type-check",
    "compile": "tsc",
    "build": "run-s lint type-check compile",
    "git-tag": "git tag \"v$(node -p \"require('./package.json').version\")\"",
    "git-push-tag": "git push origin \"v$(node -p \"require('./package.json').version\")\"",
    "npm-publish": "pnpm publish --access public",
    "npm-publish-dry": "pnpm publish --dry-run --access public",
    "publish:npm": "run-s build git-tag git-push-tag npm-publish",
    "publish:dry-run": "run-s build npm-publish-dry",
    "generate-release-notes": "node scripts/generate-release-notes.js",
    "clean-release-files": "rm -f .tmp-tag-notes.txt .tmp-release-prompt.txt",
    "release:patch": "node scripts/release.js patch",
    "release:minor": "node scripts/release.js minor",
    "release:major": "node scripts/release.js major"
  },
  "packageManager": "pnpm@10.17.0",
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/node": "^24.5.2",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.6.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@types/react": "^19.1.13",
    "ink": "^6.3.1",
    "react": "^19.1.1",
    "zod": "^4.1.11"
  }
}
